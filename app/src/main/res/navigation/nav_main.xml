<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.zerir.thegallery.feature_images.presentation.search.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_imageDetailsFragment"
            app:destination="@id/imageDetailsFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in_back"
            app:popExitAnim="@anim/fade_out_back" />
    </fragment>

    <fragment
        android:id="@+id/imageDetailsFragment"
        android:name="com.zerir.thegallery.feature_images.presentation.details.ImageDetailsFragment"
        android:label="ImageDetailsFragment"
        tools:layout="@layout/fragment_image_details" >
        <argument
            android:name="imageQuery"
            app:argType="string" />
        <argument
            android:name="imageId"
            app:argType="string" />
    </fragment>
</navigation>