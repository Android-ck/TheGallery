<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.zerir.thegallery.R"/>

        <variable
            name="viewModel"
            type="com.zerir.thegallery.feature_images.presentation.details.ImageDetailsViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        tools:context=".feature_images.presentation.details.ImageDetailsFragment">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image_iv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/teal_700"
                    android:contentDescription="@null"
                    android:scaleType="center"
                    app:imageUrl="@{viewModel.image.largeImageURL}"
                    app:placeHolder="@{R.drawable.ic_download_large}"
                    app:errorHolder="@{R.drawable.ic_download_failed_large}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_download_failed_large" />

                <TextView
                    android:id="@+id/name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:maxLines="1"
                    android:textColor="@color/teal_700"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="@{viewModel.image.user}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/image_iv"
                    tools:text="User-Name" />

                <TextView
                    android:id="@+id/tags_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/teal_700"
                    android:textSize="18sp"
                    android:text="@{viewModel.image.tags}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/name_tv"
                    tools:text="tag1, tag2, tag2" />

                <TextView
                    android:id="@+id/comments_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:drawablePadding="8dp"
                    android:text='@{@string/comments + ": " + viewModel.image.comments}'
                    android:textColor="@color/teal_700"
                    android:textSize="18sp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    app:drawableStartCompat="@drawable/ic_comment"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tags_tv"
                    tools:text="Comments: 9090" />

                <TextView
                    android:id="@+id/download_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:gravity="center"
                    android:text='@{@string/downloads + "\n" + viewModel.image.downloads}'
                    android:textColor="@color/teal_700"
                    android:textSize="18sp"
                    app:drawableTopCompat="@drawable/ic_download"
                    app:layout_constraintEnd_toStartOf="@+id/likes_tv"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/comments_tv"
                    tools:text="Downloads\n102939" />

                <TextView
                    android:id="@+id/likes_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="center"
                    android:text='@{@string/likes + "\n" + viewModel.image.likes}'
                    android:textColor="@color/teal_700"
                    android:textSize="18sp"
                    app:drawableTopCompat="@drawable/ic_like"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/download_tv"
                    app:layout_constraintTop_toBottomOf="@+id/comments_tv"
                    tools:text="Likes\n123" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>
    </androidx.core.widget.NestedScrollView>
</layout>